{
  "compilerOptions": {
    "allowSyntheticDefaultImports":true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015", 
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noImplicitAny": false, //todo true
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "outDir": "dist/unbundled",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@kmx/*": [ "./src/app/*" ],
      "@workers/*": [ "./src/workers/*" ]
    }
  },
  "files": [
    //"src/main.aot.ts",
    "src/main.ts",
    "src/polyfills.ts",
    "src/vendor.ts",
    "src/workers/socket.worker.ts"
  ],
  "exclude": [
    "dist",
    "vendor",
    "js",
    "ngfactory",
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "./ngfactory",
    "debug": true
  }
}